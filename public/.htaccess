<IfModule mod_rewrite.c>
  RewriteEngine On

  <IfModule mod_negotiation.c>
    Options -MultiViews
  </IfModule>

  # Specific redirect
  RewriteRule ^landing-page/virtual-medication-management/?$ /lp/medication-management [R=301,L,QSA]
  RewriteRule ^landing-page/(.+)$ /lp/$1 [R=301,L,QSA]

  # Serve existing files/directories normally
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
</IfModule>

ErrorDocument 404 /404.html

<IfModule mod_headers.c>
  # Cache everything on CDN by default
  # Default for HTML/docs: short CDN cache
  Header set Cache-Control "public, max-age=0, s-maxage=300"

  # Long cache for assets
  <If "%{REQUEST_URI} =~ m#^/assets/.*$#">
    Header set Cache-Control "public, max-age=604800, immutable"
  </If>
</IfModule>
