<IfModule mod_rewrite.c>
  RewriteEngine On

  <IfModule mod_negotiation.c>
    Options -MultiViews
  </IfModule>

  # Legacy redirects (root .htaccess)
  RewriteRule ^landing-page/virtual-medication-management(\.html)?/?$ /lp/medication-management [R=301,L,QSA]
  RewriteRule ^landing-page/(.+?)(\.html)?/?$ /lp/$1 [R=301,L,QSA]

  # Serve real files/dirs
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Anything else does not exist -> 404
  RewriteRule ^ - [R=404,L]
</IfModule>

ErrorDocument 404 /404.html

<IfModule mod_headers.c>
  # Cache everything on CDN by default
  # Default for HTML/docs: short CDN cache
  Header set Cache-Control "public, max-age=0, s-maxage=300"

  # Long cache for assets
  <If "%{REQUEST_URI} =~ m#^/assets/.*$#">
    Header set Cache-Control "public, max-age=604800, immutable"
  </If>
</IfModule>
