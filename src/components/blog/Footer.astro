---
const footerLinks = {
  resources: {
    title: "Resources",
    links: [
      { name: "Understanding Feelings", href: "/category/understanding-feelings" },
      { name: "Getting Help", href: "/category/getting-help" },
      { name: "Life Skills", href: "/category/life-skills" },
      { name: "For Families", href: "/category/families-caregivers" },
      { name: "Crisis Support", href: "/category/practical-resources/crisis-resources" },
    ],
  },
  services: {
    title: "Services",
    links: [
      { name: "Therapy & Counseling", href: "#" },
      { name: "Medication Management", href: "#" },
      { name: "SpravatoÂ® Treatment", href: "#" },
      { name: "Telehealth Care", href: "#" },
      { name: "Genetic Testing", href: "#" },
    ],
  },
  about: {
    title: "About",
    links: [
      { name: "Our Approach", href: "#" },
      { name: "Meet the Team", href: "#" },
      { name: "Careers", href: "#" },
      { name: "Contact Us", href: "#" },
      { name: "Press & Media", href: "#" },
    ],
  },
  legal: {
    title: "Legal",
    links: [
      { name: "Privacy Policy", href: "#" },
      { name: "Terms of Service", href: "#" },
      { name: "Accessibility", href: "#" },
      { name: "HIPAA Notice", href: "#" },
    ],
  },
};

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-card">
  <div class="mx-auto max-w-7xl px-4 py-12 lg:px-8 lg:py-16">
    <div class="grid gap-8 lg:grid-cols-6">
      <!-- Brand column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="h-6 w-6 text-primary-foreground"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 3c-1.5 0-3 .5-4 1.5C6.5 5.5 5 8 5 11c0 4 3 7 7 9 4-2 7-5 7-9 0-3-1.5-5.5-3-6.5-1-.9-2.5-1.5-4-1.5z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 8v4m0 0v4m0-4h4m-4 0H8"
              />
            </svg>
          </div>
          <div class="flex flex-col">
            <span class="font-serif text-lg font-semibold text-foreground leading-tight">
              Oasis
            </span>
            <span class="text-xs text-muted-foreground leading-tight">
              Support & Resource Center
            </span>
          </div>
        </a>
        <p class="mt-4 text-sm text-muted-foreground leading-relaxed max-w-xs">
          A warm, supportive space for mental health resources, guidance,
          and community connection.
        </p>

        <!-- Contact info -->
        <div class="mt-6 space-y-3">
          <a
            href="tel:1-800-OASIS"
            class="flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            1-800-OASIS
          </a>
          <a
            href="mailto:hello@oasis.care"
            class="flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            hello@oasis.care
          </a>
          <div class="flex items-start gap-2 text-sm text-muted-foreground">
            <svg class="h-4 w-4 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>123 Wellness Way, Suite 100, Healing City, HC 12345</span>
          </div>
        </div>
      </div>

      <!-- Link columns -->
      {Object.values(footerLinks).map((section) => (
        <div>
          <h3 class="text-sm font-semibold text-foreground">
            {section.title}
          </h3>
          <ul class="mt-4 space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-muted-foreground hover:text-foreground transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Crisis banner -->
    <div class="mt-12 rounded-xl bg-destructive/10 border border-destructive/20 p-4">
      <div class="flex flex-col sm:flex-row sm:items-center gap-3">
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5 text-destructive" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="font-semibold text-foreground">
            In Crisis?
          </span>
        </div>
        <p class="text-sm text-muted-foreground">
          If you or someone you know is in immediate danger, please call{" "}
          <a href="tel:988" class="font-semibold text-foreground hover:text-primary">
            988
          </a>{" "}
          (Suicide & Crisis Lifeline) or{" "}
          <a href="tel:911" class="font-semibold text-foreground hover:text-primary">
            911
          </a>.
        </p>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 border-t border-border pt-8">
      <p class="text-sm text-muted-foreground">
        &copy; {currentYear} Oasis Support & Resource Center. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a href="#" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="Facebook">
