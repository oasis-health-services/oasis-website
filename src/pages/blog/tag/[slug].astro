---
import { getCollection } from 'astro:content';
import BlogLayout from "../../../layouts/BlogLayout.astro";
import Header from "../../../components/blog/react/Header";
import Footer from "../../../components/blog/Footer.astro";
import BreadcrumbNav from "../../../components/blog/BreadcrumbNav.astro";
import ArticleCard from "../../../components/blog/ArticleCard.astro";
import { 
  getArticlesByTag, 
  getCategories 
} from "../../../content/config";
import { cn } from "../../../lib/utils";
import { Hash } from "lucide-react";

export async function getStaticPaths() {
  const allTags = await getCollection('tags');
  return allTags.map((tag) => ({
    params: { slug: tag.data.slug },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const articles = await getArticlesByTag(tag.id);
const allTagsEntries = await getCollection('tags');
const allTags = allTagsEntries.map(t => t.data);
const categoriesEntries = await getCategories();
const categories = categoriesEntries.map(c => c.data);
---

<BlogLayout title={`#${tag.data.name} | Oasis Support & Resource Center`} description={`Articles tagged with "${tag.data.name}" - helpful resources and guidance from Oasis Support & Resource Center.`}>
  <Header categories={categories} client:load />
  <main class="flex-1">
    <!-- Hero section -->
    <section class="py-12 md:py-16 border-b border-border bg-muted/30">
      <div class="mx-auto max-w-7xl px-4 lg:px-8">
        <BreadcrumbNav
          items={[
            { label: "Tags", href: "/blog/tags" },
            { label: tag.data.name },
          ]}
        />
        
        <div class="flex items-start gap-6">
          <div class="hidden sm:flex rounded-2xl bg-primary/10 p-4 text-primary">
            <svg class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 9h16M4 15h16M10 3v18M14 3v18" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-muted-foreground mb-2">
              Tagged with
            </p>
            <h1 class="font-serif text-3xl font-semibold text-foreground sm:text-4xl lg:text-5xl">
              #{tag.data.name}
            </h1>
            <p class="mt-4 text-lg text-muted-foreground">
              {articles.length} {articles.length === 1 ? "article" : "articles"} with this tag
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Articles -->
    <section class="py-12 md:py-16">
      <div class="mx-auto max-w-7xl px-4 lg:px-8">
        {articles.length > 0 ? (
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {articles.map((article) => (
              <ArticleCard article={article} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="mx-auto w-16 h-16 rounded-full bg-muted flex items-center justify-center mb-4">
              <svg class="h-8 w-8 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
            </div>
            <h2 class="font-serif text-2xl font-semibold text-foreground mb-2">
              No Articles Yet
            </h2>
            <p class="text-muted-foreground max-w-md mx-auto">
              We're working on creating content for this topic. Check back soon!
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Other tags -->
    <section class="py-12 md:py-16 bg-muted/50">
      <div class="mx-auto max-w-7xl px-4 lg:px-8">
        <h2 class="font-serif text-2xl font-semibold text-foreground mb-8">
          Explore Other Tags
        </h2>
        <div class="flex flex-wrap gap-3">
          {allTags
            .filter((t) => t.slug !== tag.data.slug)
            .map((t) => (
              <a
                href={`/blog/tag/${t.slug}`}
                class="flex items-center gap-1.5 rounded-full px-4 py-2 text-sm font-medium transition-all bg-card text-foreground hover:bg-primary hover:text-primary-foreground border border-border"
              >
                <Hash className="h-3.5 w-3.5" />
                {t.name}
              </a>
            ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BlogLayout>
