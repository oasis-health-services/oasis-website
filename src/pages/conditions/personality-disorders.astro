---
import Layout from '../../layouts/Layout.astro';
import PersonalityDisordersPage from '@/components/pages/conditions/PersonalityDisorders';
import { getBreadcrumbSchema } from '@/components/SEO';
---

<Layout 
  title="Personality Disorders"
  description="Understand personality disorders and how they impact relationships and daily life. Learn about symptoms, evaluation, and treatment approaches."
  keywords="personality disorders treatment, BPD treatment, OCPD treatment, antisocial personality disorder information"
  schema={[
          {
            '@context': 'https://schema.org',
            '@type': 'MedicalCondition',
            name: 'Personality Disorders',
            description: 'Specialized therapy for personality disorders including Borderline, Obsessive-Compulsive, and Anti-Social personality disorders.',
            possibleTreatment: {
              '@type': 'MedicalTherapy',
              name: 'Psychiatric Treatment and Therapy'
            }
          },
          getBreadcrumbSchema([
            { name: 'Home', url: '/' },
            { name: 'Conditions', url: '/conditions' },
            { name: 'Personality Disorders', url: '/conditions/personality-disorders' }
          ])
        ]}
>
  <PersonalityDisordersPage client:load /> 
</Layout>
